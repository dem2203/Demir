{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "python -m streamlit run streamlit_app.py --server.port=8501 --server.address=0.0.0.0",
    "restartPolicyCondition": "on-failure",
    "restartPolicyMaxRetries": 3
  }
}
